{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "transpileOnly": true
    }
}
